model Budget {
  id          Int       @id @default(autoincrement())
  project     Project   @relation(fields: [projectId], references: [id])
  projectId   Int

  company     Company   @relation(fields: [companyId], references: [id])
  companyId   Int

  risk        Risk?     @relation(fields: [riskId], references: [id])
  riskId      Int?

  category    String    // e.g., "Initial Planning", "Development Phase", "Deployment"
  allocated   Float     // Total allocated budget for this category
  spent       Float     // Amount spent so far
  remaining   Float     // allocated - spent
  utilization Float     // (spent / allocated) * 100

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

}
